{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/**", "/icons/**", "*.{css,scss,js,ts,png,jpg,jpeg,gif,ico,svg,woff,woff2}"]
  },
  "mimeTypes": {
    ".json": "application/json",
    ".woff": "font/woff",
    ".woff2": "font/woff2"
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "Referrer-Policy": "strict-origin-when-cross-origin"
  },
  "routes": [
    {
      "route": "/robots.txt",
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/sitemap.xml", 
      "headers": {
        "Cache-Control": "public, max-age=86400"
      }
    },
    {
      "route": "/assets/**",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/icons/**",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.{png,jpg,jpeg,gif,ico,svg}",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.{css,js}",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/*.{woff,woff2}",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    }
  ]
} 